{
  "$schema": "http://json.schemastore.org/template",
  "author": "API Template Pack",
  "name": "API solution template",
  "description": "Solution template to implement Vertical Slice Architecture in projects",
  "identity": "ApiSolution",
  "shortName": "apisolution",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "ApiSolution",
  "preferNameDirectory": true,
  "symbols": {
    "root": {
      "type": "parameter",
      "replaces": "placeHolder",
      "dataType": "string",
      "defaultValue": "Threenine"
    },
    "mssql": {
      "type": "computed",
      "value": "(!postgre)"
    },
    "postgre": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    },
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net8.0"
        }
      ],
      "defaultValue": "net8 .0"
    }
  },
  "classifications": [
    "API Template Pack"
  ]
}